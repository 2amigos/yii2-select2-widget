{
    "name": "2amigos/yii2-select2-widget",
    "description": "Select 2 jQuery plugin for Yii2 with Bootstrap theme capabilities",
    "type": "yii2-extension",
    "keywords": [
        "2amigos",
        "yii2",
        "extension",
        "widget",
        "select2",
        "form",
        "dropdown",
        "jquery",
        "plugin"
    ],
    "homepage": "https://github.com/2amigos/yii2-select2-widget",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "2amigOS! Consulting Group",
            "email": "hola@2amigos.us",
            "homepage": "http://2amigos.us",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/2amigos/yii2-select2-widget/issues",
        "source": "https://github.com/2amigos/yii2-select2-widget"
    },
    "require": {
        "yiisoft/yii2": "~2.0.5",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "bower-asset/select2": "~4.0",
        "bower-asset/select2-bootstrap-theme": "~0.1.0-beta.10"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "squizlabs/php_codesniffer": "*",
        "phpmd/phpmd": "@stable"
    },
    "autoload": {
        "psr-4": {
            "dosamigos\\select2\\": "src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "preferred-install": {
            "*": "auto"
        },
        "fxp-asset": {
            "installer-paths": {
                "npm-asset-library": "vendor/npm",
                "bower-asset-library": "vendor/bower"
            },
            "vcs-driver-options": {
                "github-no-api": true
            },
            "git-skip-update": "2 days",
            "pattern-skip-version": "(-build|-patch)"
        }
    }
}
